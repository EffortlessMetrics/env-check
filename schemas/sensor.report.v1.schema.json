{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:effortless:sensor.report.v1",
  "title": "sensor.report.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "tool",
    "run",
    "verdict",
    "findings"
  ],
  "properties": {
    "schema": {
      "type": "string"
    },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        }
      }
    },
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "started_at"
      ],
      "properties": {
        "started_at": {
          "type": "string",
          "format": "date-time"
        },
        "ended_at": {
          "type": "string",
          "format": "date-time"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "host": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "os": {
              "type": "string"
            },
            "arch": {
              "type": "string"
            },
            "hostname": {
              "type": "string"
            }
          }
        },
        "ci": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "provider": {
              "type": "string"
            },
            "job": {
              "type": "string"
            },
            "run_id": {
              "type": "string"
            },
            "workflow": {
              "type": "string"
            },
            "repository": {
              "type": "string"
            },
            "git_ref": {
              "type": "string"
            },
            "sha": {
              "type": "string"
            }
          }
        },
        "git": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repo": {
              "type": "string"
            },
            "base_ref": {
              "type": "string"
            },
            "head_ref": {
              "type": "string"
            },
            "base_sha": {
              "type": "string"
            },
            "head_sha": {
              "type": "string"
            },
            "merge_base": {
              "type": "string"
            },
            "pr_number": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "capabilities": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["status"],
            "properties": {
              "status": { "enum": ["available", "unavailable", "skipped"] },
              "reason": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      }
    },
    "verdict": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "counts"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "warn",
            "fail",
            "skip"
          ]
        },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "info",
            "warn",
            "error"
          ],
          "properties": {
            "info": {
              "type": "integer",
              "minimum": 0
            },
            "warn": {
              "type": "integer",
              "minimum": 0
            },
            "error": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    },
    "findings": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "code",
          "message"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "error"
            ]
          },
          "check_id": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "path": {
                "type": "string"
              },
              "line": {
                "type": "integer",
                "minimum": 1
              },
              "col": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "help": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "fingerprint": {
            "type": "string"
          },
          "data": {
            "type": [
              "object",
              "array",
              "string",
              "number",
              "boolean",
              "null"
            ],
            "default": null
          }
        }
      }
    },
    "data": {
      "type": [
        "object",
        "array",
        "string",
        "number",
        "boolean",
        "null"
      ],
      "default": null
    }
  }
}
